<?php

namespace {{ bundleName }}\PresentationBundle;

use Symfony\Component\HttpKernel\Bundle\Bundle;
use Symfony\Component\DependencyInjection\ContainerBuilder;
use  {{ bundleName }}\PresentationBundle\DependencyInjection\Compiler\ResettingListenersPass;
use  {{ bundleName }}\PresentationBundle\DependencyInjection\PresentationBundleExtension;

class PresentationBundle extends Bundle
{
    public function getContainerExtension()
    {
        return new PresentationBundleExtension();
    }

    public function build(ContainerBuilder $container) //Enregistrement du compilerPass "RegisterListenersPass"
    {
        parent::build($container);
        $container->addCompilerPass(new ResettingListenersPass());
    }
}
